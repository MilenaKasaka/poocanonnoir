<Window x:Class="canon_noir.Initialisation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Canon Noir - Nouvelle partie" Height="279" Width="353" Loaded="Window_Loaded">
    <StackPanel Height="253" Name="stackPanel1" Width="269">
        <Label Content="Nouvelle partie de Canon Noir" Height="28" Name="label2" FontWeight="Bold" />
        <StackPanel Height="187" Name="stackPanel2" Width="240">
            <StackPanel Height="86" Name="stackPanel3" Width="206" Background="#B4EFA12E" Opacity="1">
                <Label Content="Choisissez le nombre de joueurs" Height="28" Name="label1" Background="{x:Null}" FontWeight="Bold" />
                <ComboBox Height="23" Name="comboBox1" Width="120" SelectionChanged="comboBox1_SelectionChanged">
                    <ComboBoxItem Content="2" IsSelected="True" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                </ComboBox>
            </StackPanel>
            <TextBlock Height="93" Name="textBlock1" Text="TextBlock" Width="148" />
            <StackPanel.Background>
                <ImageBrush ImageSource="/canon_noir;component/CanonNoir-gd.jpg" />
            </StackPanel.Background>
        </StackPanel>
        <Button Content="Commencer !" Height="23" Name="button1" Width="75" Click="button1_Click"/>
    </StackPanel>
</Window>
